{
  "name": "puzzle-game",
  "version": "0.1.0",
  "react": "jsx",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "reactjs-popup": "^2.0.4",
    "redux-zero": "^5.1.7",
    "styled-components": "^5.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.jsx .",
    "lint:fix": "eslint src/**/*.jsx --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --config .prettierrc . --ext .{jsx,json} --write"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/html/**"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "eslint": "^7.30.0",
    "lint-staged": ">=10",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.jsx": [
      "eslint . --fix",
      "prettier --write src/",
      "git add ."
    ]
  }
}
